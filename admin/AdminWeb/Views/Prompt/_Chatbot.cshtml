@model Prompt

@{
    string action = ViewBag.Action ?? string.Empty;

}

<form asp-action="@action" asp-controller="Prompt" method="post" enctype="multipart/form-data">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="question" class="control-label">Câu hỏi</label>
        <input asp-for="question" class="form-control" />
        <span asp-validation-for="question" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="responses" class="control-label">Phản hồi</label>
        <input asp-for="responses" class="form-control" />
        <span asp-validation-for="responses" class="text-danger"></span>
    </div>

    <div
    <input type="hidden" asp-for="id" />

    <div class="form-group">
        <input type="submit" value="Lưu" class="btn btn-primary btn-block" />
    </div>
</form>
